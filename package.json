{
  "name": "boomadmin.com",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build-prod": "yarn clean && NODE_ENV=production yarn build",
    "build": "PROGRESS=${PROGRESS:-true} webpack --config frontend/webpack/webpack.config.js",
    "lint": "scripts/parallel.sh \"prettier --list-different '{common,server,frontend}/**/*.{js,ts,tsx,scss}'\" \"eslint --ext .js,.ts,.tsx '{common,server,frontend}/**/*.{js,ts,tsx}'\" \"tsc -p tsconfig.json\"",
    "start": "node -r ts-node/register/transpile-only server/server.ts",
    "dev-server": "yarn clean && yarn install-if-needed && PROGRESS=${PROGRESS:-true} webpack-dev-server --config frontend/webpack/webpack.config.js",
    "install-if-needed": "cmp -s package.json ._package.json || (yarn install && cp package.json ._package.json)"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-pro": "5.13.0",
    "@google-cloud/firestore": "3.7.4",
    "@types/classnames": "2.2.10",
    "@types/express": "4.17.3",
    "@types/pug": "2.0.4",
    "@types/webpack": "4.41.7",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "bulma": "0.8.0",
    "classnames": "2.2.6",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "3.4.2",
    "csstype": "2.6.10",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-react": "7.18.3",
    "express": "4.17.1",
    "jss": "10.0.4",
    "jss-plugin-camel-case": "10.0.4",
    "jss-plugin-global": "10.0.4",
    "jss-plugin-nested": "10.0.4",
    "lint-config-nojvek": "1.0.1",
    "loader-utils": "2.0.0",
    "mini-css-extract-plugin": "0.9.0",
    "mysql2": "2.1.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "preact": "10.3.3",
    "prettier": "1.19.1",
    "prettier-eslint": "9.0.1",
    "raw-loader": "4.0.1",
    "sass": "1.26.2",
    "sass-loader": "8.0.2",
    "server-timing": "3.2.1",
    "terser-webpack-plugin": "2.3.5",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "typescript": "3.8.3",
    "url-loader": "3.0.0",
    "webpack": "4.41.5",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.2",
    "webpack-dev-server-status-bar": "1.1.2"
  },
  "dependencies": {}
}
